package pack1;

public class Wurfel {

	private Punkt p1;
	private Punkt p2;
	private Punkt p3;
	private Punkt p4;
	private double seitenlenge;
	

	public Wurfel(Punkt p1, Punkt p2, Punkt p3, Punkt p4) {
		this.p1 = p1;
		this.p2 = p2;
		this.p3 = p3;
		this.p4 = p4;
		Abstand a = new Abstand(p1, p2);
		seitenlenge = a.abstandBerechnen();
	}

	public Punkt getP1() {
		return p1;
	}

	public void setP1(Punkt p1) {
		this.p1 = p1;
	}

	public Punkt getP2() {
		return p2;
	}

	public void setP2(Punkt p2) {
		this.p2 = p2;
	}

	public Punkt getP3() {
		return p3;
	}

	public void setP3(Punkt p3) {
		this.p3 = p3;
	}

	public Punkt getP4() {
		return p4;
	}

	public void setP4(Punkt p4) {
		this.p4 = p4;
	}

	public double getSeitenlenge() {
		return seitenlenge;
	}

	public void setSeitenlenge(double seitenlenge) {
		this.seitenlenge = seitenlenge;
	}
}
